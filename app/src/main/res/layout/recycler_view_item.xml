<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/employeeId_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:padding="8dp"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/employeeName_tv" />

    <TextView
        android:id="@+id/employeeName_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:padding="8dp"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/employeeId_tv" />

    <TextView
        android:id="@+id/leavePeriod_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="8dp"
        app:layout_constraintTop_toBottomOf="@+id/employeeName_tv"
        android:background="@android:color/holo_green_dark"
        android:padding="8dp"
        tools:ignore="UnknownId" />
    <TextView
        android:id="@+id/description_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="8dp"
        app:layout_constraintTop_toBottomOf="@+id/leavePeriod_tv"
        android:background="@android:color/holo_green_dark"
        android:padding="8dp"
        tools:ignore="UnknownId" />

</android.support.constraint.ConstraintLayout>